a = "apples"
b = "bark"
c = {aa = "cat", bb = "cookie", cc = "cycle"}

--This is a table. Lua it is like an array

while a == "apples" do
	print("Apples print in the while loop.")
	a = "This stops the loop"
end
--[[---------------------------------------]]

repeat
	print("Bark prints in the repeat loop.")
	b = "bagel"
until b == "bagel"
--[[---------------------------------------]]

for i = 0,2 do
	local index
	if i == 0 then index = "aa"
	else if i == 1 then index = "bb"
	else if i == 2 then index = "cc"
	print("This is the " ..i .."th index of c: " ..c.index)
end